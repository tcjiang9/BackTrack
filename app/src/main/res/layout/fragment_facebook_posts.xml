<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.intrepid.nostalgia.facebook.FacebookPostsFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/fb_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />

    <TextView
        android:id="@+id/fb_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fb_name" />

    <ImageView
        android:id="@+id/image_shared"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fb_status"
        android:contentDescription="@string/facebook_tab"
        android:paddingTop="@dimen/image_padding"
        android:src="@drawable/ic_launcher"
        android:visibility="gone" />

</RelativeLayout>
