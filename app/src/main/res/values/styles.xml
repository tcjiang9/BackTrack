<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:tabWidgetStyle">@style/CustomTabWidget</item>
    </style>

    <style name="settings_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">@dimen/abc_text_size_headline_material</item>
        <item name="android:thumb">@drawable/settings_switch</item>
        <item name="android:track">@drawable/track</item>
    </style>

    <style name="imageViewStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:contentDescription">Facebook Activity</item>
        <item name="android:src">@drawable/image_boat</item>
    </style>

    <style name="timeText">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@drawable/ribbon</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginLeft">11dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">17dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:layout_marginTop">7dp</item>
    </style>

    <style name="status_text">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">34dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:text">@string/status_alternative</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="numbers">
        <item name="android:layout_width">17dp</item>
        <item name="android:layout_height">17dp</item>
        <item name="android:layout_marginTop">12.5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="likes_img">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:src">@drawable/heart</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="comments_img">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:src">@drawable/comment</item>
        <item name="android:layout_marginLeft">68dp</item>
    </style>

    <style name="post_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="image_container_style">
        <item name="android:layout_height">186dp</item>
        <item name="android:layout_width">328dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="status_container">
        <item name="android:background">#FFFFFF</item>
        <item name="android:layout_width">328dp</item>
        <item name="android:layout_height">134dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>

    </style>
    <style name="CustomTabWidget" parent="@android:style/Widget.TabWidget">
        <item name="android:textAppearance">@style/CustomTabWidgetText</item>
    </style>
    <style name="CustomTabWidgetText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabTextAppearance" >
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/tabview_selector_color</item>
    </style>
    
    <style name="TabTextSelected">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
