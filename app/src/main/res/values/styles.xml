<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="settings_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/abc_text_size_headline_material</item>
    </style>

    <style name="imageViewStyle">
        <item name="android:layout_height">@dimen/facebook_main_screen</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:contentDescription">Facebook Activity</item>
        <item name="android:src">@drawable/river</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="timeText">
        <item name="android:text">9:00 AM</item>
        <item name="android:background">@color/facebook_background</item>
        <item name="android:paddingRight">@dimen/facebook_time_padding</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="numbers">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="images_numbers">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_launcher</item>
    </style>

    <style name="post_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>
