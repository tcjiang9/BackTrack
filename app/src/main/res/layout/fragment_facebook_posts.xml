<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.intrepid.nostalgia.FacebookPostsFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fb_name"
        android:layout_alignParentTop="true"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fb_status"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="79dp" />

    <ImageView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:contentDescription="@string/facebook_tab"
        android:id="@+id/image_shared"
        android:visibility="gone"
        android:src="@drawable/ic_launcher"
        android:layout_alignTop="@+id/fb_status"
        android:paddingTop="30dp"/>

</RelativeLayout>
