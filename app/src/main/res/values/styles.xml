<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:tabWidgetStyle">@style/TabTextAppearance</item>
        <item name="android:colorPrimaryDark">@color/application_color</item>
    </style>

    <style name="settings_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">@dimen/abc_text_size_headline_material</item>
        <item name="android:thumb">@drawable/settings_switch</item>
        <item name="android:track">@drawable/track</item>
    </style>

    <style name="imageViewStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:contentDescription">Facebook Activity</item>
        <item name="android:src">@drawable/image_boat</item>
    </style>

    <style name="timeText">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@drawable/ribbon</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginLeft">11dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">17dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:textAppearance">@style/regular</item>
    </style>

    <style name="status_text">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">34dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:text">@string/status_alternative</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAppearance">@style/regular</item>

    </style>

    <style name="numbers">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">17dp</item>
        <item name="android:layout_marginTop">12.5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/regular</item>
    </style>

    <style name="likes_img">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:src">@drawable/heart</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="comments_img">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:src">@drawable/comment</item>
        <item name="android:layout_marginLeft">68dp</item>
    </style>

    <style name="post_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="image_container_style">
        <item name="android:layout_height">186dp</item>
        <item name="android:layout_width">328dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="status_container">
        <item name="android:background">#FFFFFF</item>
        <item name="android:layout_width">328dp</item>
        <item name="android:layout_height">134dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>

    </style>

    <style name="TabTextAppearance" >
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/tabview_selector_color</item>
        <item name="android:textAppearance">@style/semi_bold</item>
    </style>

    <style name="DialogNoTitleBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
<style name="detailsFbStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">#000000</item>
    <item name="android:layout_marginLeft">16dp</item>
    <item name="android:layout_marginRight">16dp</item>
    <item name="android:textSize">15sp</item>
</style>


    <!--fonts-->

    <style name="black">
        <item name="fontPath">fonts/ProximaNova-Black copy.otf</item>
    </style>

    <style name="bold">
        <item name="fontPath">fonts/ProximaNova-Bold.otf</item>
    </style>
    
    <style name="bold_lt">
        <item name="fontPath">fonts/ProximaNova-Boldlt.otf</item>
    </style>

    <style name="extra_bold" parent="android:TextAppearance">
        <item name="fontPath">fonts/ProximaNova-Extrabold.otf</item>
    </style>

    <style name="light" parent="android:TextAppearance">
        <item name="fontPath">fonts/ProximaNova-Light.otf</item>
    </style>

    <style name="light_italic" parent="android:TextAppearance">
        <item name="fontPath">fonts/ProximaNova-LightItalic.otf</item>
    </style>

    <style name="reg_italic" parent="android:TextAppearance">
        <item name="fontPath">fonts/ProximaNova-RegItalic.otf</item>
    </style>

    <style name="regular" parent="android:TextAppearance">
        <item name="fontPath">fonts/ProximaNova-Regular.otf</item>
    </style>

    <style name="regular_italic" parent="android:TextAppearance">
        <item name="fontPath">fonts/ProximaNova-RegularItalic.otf</item>
    </style>

    <style name="semi_bold" parent="android:TextAppearance">
        <item name="fontPath">fonts/ProximaNova-Semibold.otf</item>
    </style>

    <style name="semi_bold_italic" parent="android:TextAppearance">
        <item name="fontPath">fonts/ProximaNova-SemiboldItalic.otf</item>
    </style>

</resources>
